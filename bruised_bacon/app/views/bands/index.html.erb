
<div class="text-center">

<%= link_to "New Band", new_band_path %>
</div>

<% @bands.each do |band| %>
<div class="text-center">
<h3> <%= link_to band.name, band_path(band.id) %> </h3>
<h5> Genre: <%=band.genre %> </h5>
<% if band.explicit_lyrics %>
<img class="explicit" src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/33/Parental_Advisory_label.svg/2000px-Parental_Advisory_label.svg.png"> <br/>
<%= link_to 'Edit', edit_band_path(band.id) %> <%= link_to "Delete", band_path(band.id), method: :delete%>
</div>
<% end %>


<% end %>