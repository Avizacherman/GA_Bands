<%= form_for @event do |f| %>
    <%= f.text_field :name, placeholder: 'Event Name' %><br>
    <%= f.text_field :date, placeholder: 'Enter Date' %><br>
    <%= f.text_field :alcohol_served, placeholder: 'Will you be serving alcohol?' %><br>

    <%if @venue_id%>
      <%= f.select :venue_id, [[Venue.find(@venue_id).name, @venue_id]], :readonly => true%><br>
    <%else%>
      <%= f.collection_select :venue_id, Venue.all, :id, :name %><br>
    <%end%>
    <%= f.collection_select :band_id, Band.all, :id, :name %><br>
    <%= f.submit %>
<% end %>
